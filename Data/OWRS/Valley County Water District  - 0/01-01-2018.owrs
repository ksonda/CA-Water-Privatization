metadata:
  effective_date: 01/01/2018
  utility_name: Valley County Water District 
  bill_frequency: Bi-Monthly
  bill_unit: ccf
  prop_218_link: http://www.vcwd.org/page/82953_Water_Service_Rates.asp
rate_structure:
  RESIDENTIAL_SINGLE:
    service_charge:
      depends_on:
        - meter_size
      values:
        5/8": 29.82
        3/4": 29.82
        1": 58.59
        1|1/2": 106.56
        2": 164.11
    commodity_charge: Tiered
    tier_starts_commodity:
      - 0
      - 17
      - 31
    tier_prices_commodity:
      - 1.16
      - 1.85
      - 3.22
    fixed_drought_surcharge: 0
    variable_drought_surcharge: 0
    fixed_wastewater_charge: 0
    variable_wastewater_charge: 0
    bill: service_charge+commodity_charge
  RESIDENTIAL_MULTI:
    service_charge:
      depends_on:
        - meter_size
      values:
        5/8": 29.82
        3/4": 29.82
        1": 58.59
        1|1/2": 106.56
        2": 164.11
    commodity_charge: flat_rate_commodity*usage_ccf
    flat_rate_commodity: 1.91
    fixed_drought_surcharge: 0
    variable_drought_surcharge: 0
    fixed_wastewater_charge: 0
    variable_wastewater_charge: 0
    bill: service_charge+commodity_charge

